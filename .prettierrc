{
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "tabWidth": 2,
  "semi": true,
  "overrides": [
    {
      "files": [
        "*/**/src/slides.md",
        "*/**/pages/*.md"
      ],
      "options": {
        "parser": "slidev",
        "plugins": [
          "prettier-plugin-slidev"
        ]
      }
    }
  ]
}
